{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "LightBluecompute Toolchain Deployment to IBM Cloud",
    "description": "lightbluecompute toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "suffix": {
            "description": "Deployment suffix",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "mysql-servers-us": {
            "description": "MySQL Server Addresses <ip>:<port>",
            "type": "string"
        },
        "inventory-db": {
            "description": "Inventory database name",
            "type": "string"
        },
        "inventory-dbuser": {
            "description": "Inventory database user",
            "type": "string"
        },
        "inventory-dbpass": {
            "description": "Inventory database password",
            "type": "password"
        }
    },
    "required": [
        "suffix",
        "deploy-org",
        "deploy-space",
        "mysql-servers-us",
        "inventory-db",
        "inventory-dbuser",
        "inventory-dbpass"
        ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Suffix",
            "key": "suffix"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "MySQL Server(s)",
            "key": "mysql-servers-us"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Inventory Database Name",
            "key": "inventory-db"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Inventory Database Username",
            "key": "inventory-dbuser"
        },
        {
            "type": "password",
            "readonly": false,
            "title": "Inventory Database Password",
            "key": "inventory-dbpass"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["30%", "35%", "35%"],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Deploy to"
                },
                {
                    "type": "select",
                    "key": "deploy-org"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
